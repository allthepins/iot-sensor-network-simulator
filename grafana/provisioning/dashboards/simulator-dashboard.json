        "h": 8,
        "w": 6,
        "x": 6,
        "y": 2
      },
      "type": "stat",
      "title": "Message Ingestion Rate",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(iot_simulator_aggregator_messages_received_total[1m]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Mps"
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 4,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 2
      },
      "type": "timeseries",
      "title": "Message Rates (Sent vs. Received)",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(iot_simulator_sensor_messages_sent_total[1m]))",
          "legendFormat": "Sent Rate"
        },
        {
          "refId": "B",
          "expr": "sum(rate(iot_simulator_aggregator_messages_received_total[1m]))",
          "legendFormat": "Received Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Mps"
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 11,
      "gridPos": {
        "h": 2,
        "w": 24,
        "x": 0,
        "y": 10
      },
      "type": "row",
      "title": "NATS Publisher Metrics"
    },
    {
      "id": 12,
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 12
      },
      "type": "stat",
      "title": "NATS Connection Status",
      "targets": [
        {
          "refId": "A",
          "expr": "iot_simulator_nats_connection_status",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "options": {
                "0": {
                  "text": "Disconnected",
                  "color": "red"
                }
              },
              "type": "value"
            },
            {
              "options": {
                "1": {
                  "text": "Connected",
                  "color": "green"
                }
              },
              "type": "value"
            }
          ]
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 13,
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 12
      },
      "type": "stat",
      "title": "NATS Publish Rate",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(iot_simulator_nats_publish_success_total[1m]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Mps"
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 14,
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 12
      },
      "type": "stat",
      "title": "NATS Publish Failures",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(iot_simulator_nats_publish_failures_total[1m]))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Fps",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 0.1,
                "color": "red"
              }
            ]
          }
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 15,
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 12
      },
      "type": "gauge",
      "title": "NATS Publish Latency (p95)",
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(iot_simulator_nats_publish_latency_seconds_bucket[1m])) by (le))",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "max": 0.1
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 16,
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "type": "timeseries",
      "title": "NATS Publish Success vs Failures Over Time",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(iot_simulator_nats_publish_success_total[1m]))",
          "legendFormat": "Success Rate"
        },
        {
          "refId": "B",
          "expr": "sum(rate(iot_simulator_nats_publish_failures_total[1m]))",
          "legendFormat": "Failure Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Mps"
        }
      },
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 5,
      "gridPos": {
        "h": 2,
        "w": 24,
        "x": 0,
        "y": 28
      },
      "type": "row",
      "title": "Sensor Health & Performance"
    },
    {
      "id": 6,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 30
      },
      "type": "timeseries",
      "title": "Sensor Restarts Over Time",
      "alerting": {
        "notifications": [],
        "rules": [
          {
            "for": "5m",
            "noDataState": "NoData",
            "execErrState": "Alerting",
            "conditions": [
              {
                "type": "query",
                "query": {
                  "params": [
                    "A",
                    "5m",
                    "now"
                  ]
                },
                "reducer": {
                  "type": "last"
                },
                "evaluator": {
                  "type": "gt",
                  "params": [
                    0
                  ]
                }
              }
            ],
            "title": "High Sensor Restart Rate"
          }
        ]
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(increase(iot_simulator_sensor_restarts_total[1m]))",
          "legendFormat": "Restarts"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 7,
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 30
      },
      "type": "table",
      "title": "Sensors with Most Restarts",
      "targets": [
        {
          "refId": "A",
          "expr": "sort_desc(sum by (sensor_id) (iot_simulator_sensor_restarts_total))",
          "instant": true
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    },
    {
      "id": 8,
      "gridPos": {
        "h": 10,
        "w": 24,
        "x": 0,
        "y": 38
      },
      "type": "heatmap",
      "title": "Sensor Value Distribution",
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(iot_simulator_sensor_generated_values_bucket[5m])) by (le)"
        }
      ],
      "datasource": {
        "type": "prometheus",
        "uid": "Prometheus"
      }
    }
  ],
